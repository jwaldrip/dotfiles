#!/bin/bash
set -e

# Install Homebrew
if ! which brew &> /dev/null ; then
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# Bundle the brews
brew bundle

# Get my private directory
./setup-private

# Clone all submodules
git submodule update -f --init --recursive

# Update git-remote
git remote set-url origin git@github.com:jwaldrip/dotfiles.git

# Symlink Cloud Directories
for folder in Documents Pictures Music Movies
  do sudo rm -rf $folder && ln -sf ./.cloud-drive/$folder
done
